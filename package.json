{
  "name": "navigate-rails-files",
  "displayName": "Navigate Rails Files",
  "description": "Navigate Rails files quickly",
  "version": "0.0.1",
  "publisher": "Hasan-Ozovali",
  "license": "MIT",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "navigate-rails-files.open-rb-file",
        "title": "Open files including .rb in the folder '/app'",
        "when": "navigate-rails-files.allow-to-open-rb-file"
      },
      {
        "command": "navigate-rails-files.change-to-app-html-file",
        "title": "Open files ending with turbo_stream.erb or html.erb in the folder '/app'",
        "when": "navigate-rails-files.allow-to-open-app-html-file"
      },
      {
        "command": "navigate-rails-files.change-to-app-turbo-stream-file",
        "title": "Open files ending with turbo_stream.erb or html.erb in the folder '/app'",
        "when": "navigate-rails-files.allow-to-open-app-turbo-stream-file"
      },
      {
        "command": "navigate-rails-files.change-to-rspec-file",
        "title": "Open files in the folder '/spec'",
        "when": "navigate-rails-files.allow-to-open-rspec-file"
      }
    ],
    "keybindings": [
      {
        "command": "navigate-rails-files.open-rb-file",
        "key": "alt+i"
      },
      {
        "command": "navigate-rails-files.change-to-app-html-file",
        "key": "alt+o"
      },
      {
        "command": "navigate-rails-files.change-to-app-turbo-stream-file",
        "key": "alt+u"
      },
      {
        "command": "navigate-rails-files.change-to-rspec-file",
        "key": "alt+p"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "navigate-rails-files.template-engines": {
          "type": "array",
          "default": ["erb", "slim", "haml"],
          "description": "Template engines to check file names. .erb files will be checked lastly as default if it is not included"
        },
        "navigate-rails-files.allow-to-open-rb-file": {
          "type": "boolean",
          "default": true,
          "description": "Enable to open files ending with .rb in the folder '/app'"
        },
        "navigate-rails-files.allow-to-open-app-html-file": {
          "type": "boolean",
          "default": true,
          "description": "Enable to open files ending with .html.erb or .turbo_stream.erb in the folder '/app'"
        },
        "navigate-rails-files.allow-to-open-app-turbo-stream-file": {
          "type": "boolean",
          "default": true,
          "description": "Enable to open files ending with .turbo_stream.erb in the folder '/app'"
        },
        "navigate-rails-files.allow-to-open-rspec-file": {
          "type": "boolean",
          "default": true,
          "description": "Enable to open files in the folder '/spec'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "chai": "^4.3.7",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "sinon": "^15.2.0",
    "typescript": "^4.9.4"
  }
}
